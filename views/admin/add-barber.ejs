<form action="/admin/add-barber" method="POST" enctype="multipart/form-data">
  <label>Name:</label>
  <input type="text" name="name" required><br>

  <label>Specialty:</label>
  <input type="text" name="specialty" required><br>

  <label>Experience:</label>
  <input type="number" name="experience" required><br>

  <label>Working Hours:</label>
  <input type="text" name="workingHours" required><br>

  <label>Bio:</label>
  <textarea name="bio" required></textarea><br>

  <label>Image:</label>
  <input type="file" name="image" accept="image/*" required><br>

  <button type="submit">Add Barber</button>
</form>
